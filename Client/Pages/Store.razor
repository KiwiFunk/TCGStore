@page "/store"
@inject HttpClient Http

<h3>TCG Store</h3>

@if (cards == null || products == null)
{
    <p>Loading items...</p>
}
else
{
    <div class="store-grid">
        @foreach (var card in cards)
        {
            <div class="store-item">
                <img src="@card.ImageUrl" alt="@card.Name" />
                <h4>@card.Name</h4>
                <p>@card.Type - @card.Rarity</p>
                <strong>£@card.Price</strong>
                <button @onclick="() => AddToCart(card.Name)">Add to Cart</button>
            </div>
        }

        @foreach (var product in products)
        {
            <div class="store-item">
                <img src="@product.ImageUrl" alt="@product.Name" />
                <h4>@product.Name</h4>
                <p>@product.Description</p>
                <strong>£@product.Price</strong>
                <button @onclick="() => AddToCart(product.Name)">Add to Cart</button>
            </div>
        }
    </div>
}

@code {
    private List<Card>? cards;
    private List<Product>? products;

    protected override async Task OnInitializedAsync()
    {
        cards = await Http.GetFromJsonAsync<List<Card>>("api/cards");
        products = await Http.GetFromJsonAsync<List<Product>>("api/products");
    }

    private void AddToCart(string itemName)
    {
        Console.WriteLine($"Added {itemName} to cart!");
    }
}